@model List<InAndOut.Models.ViewModels.UserRoleViewModel>
@{
    ViewData["Title"] = "Add Or Remove Admins";
}

<h1>Edit / Remove Admins</h1>
<form method="post">
    <div class="container">
        <div class="row">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col"> ID</th>
                        <th scope="col">Email</th>
                        <th scope="col">Add / Remove</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        if (Model[i].IsSelected)
                        {

                            <tr class="table-success">
                                <th scope="row">@i</th>
                                <td>@Model[i].UserName</td>
                                <td> <input asp-for="@Model[i].IsSelected" type="checkbox" class="form-check-input" checked="@Model[i].IsSelected" /> </td>
                            </tr>
                        }
                        else
                        {
                            <tr class="table-light">
                                <th scope="row">@i</th>
                                <td>@Model[i].UserName</td>
                                <td> <input asp-for="@Model[i].IsSelected" class="form-check-input" type="checkbox" checked="@Model[i].IsSelected" /> </td>
                            </tr>
                        }
                        <input type="hidden" asp-for="@Model[i].UserId" hidden />
                        <input type="hidden" asp-for="@Model[i].UserName" hidden />
                    }
                </tbody>
            </table>
           
            <button type="submit" asp-controller="Adminstrator" asp-action="AddOrRemoveAdmin" class="btn btn-outline-primary">Sumbit</button>
        </div>
    </div>
</form>
